.image-upload
  .box 
    background-color: tranparent;
    text-align center
    
    &.dragging-over figure
      background-color lightblue
    
    &.dragging-error figure
      background-color #d3394c
      
      img
        display none

  .inputfile
    width: 0.1px;
    height: 0.1px;
    opacity: 0;
    overflow: hidden;
    position: absolute;
    z-index: -1;

  .inputfile-4 + label 
    color: #d3394c;

  .inputfile + label 
    max-width: 80%;
    font-size: 1.25rem;
    font-weight: 700;
    text-overflow: ellipsis;
    white-space: nowrap;
    cursor: pointer;
    display: inline-block;
    overflow: hidden;
    padding: 0.625rem 1.25rem;
    hover-pop: 1.05

  .bulb-bubble
    background-image url('/images/bulb-bubble.png')
    display inline-block
    width 50px
    height 51px
    position relative
    z-index 2
    position: absolute;
    z-index: 2;
    top: 0;
    right: 0;

  .inputfile-4 + label figure 
    width: 180px;
    height: 180px;
    border-radius: 50%;
    background-color: #d3394c;
    display: block;
    padding: 20px;
    margin: 0 auto 10px
    position relative

  .inputfile + label svg,
  .inputfile + label img 
    width: 1em;
    height: 1em;
    vertical-align: middle;
    fill: currentColor;

  .inputfile-4 + label svg
    width: 75%;
    height: 100%;
    fill: #f1e5e6;
  
  .inputfile-4 + label img
    width 100%
    height 100%
  
  .inputfile-4 + label img 
    position absolute
    top 0
    left 0
    border-radius 50%
    margin 0
    box-shadow 0 0 20px 5px rgba(#000000, 10%);
  
  
  .inputfile-4:focus + label, .inputfile-4.has-focus + label, .inputfile-4 + label:hover 
    color: #722040;
  
  
  label:hover figure 
    background-color: #722040;
  